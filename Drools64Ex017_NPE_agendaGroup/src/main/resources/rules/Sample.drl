package com.sample
 
import com.sample.Person;
 
rule "Hello1"
    agenda-group "group1"
    when
        $p : Person( age > 10 )
    then
        System.out.println( "Hello1, " + $p.getName());
end

rule "Hello2"
    agenda-group "group2"
    when
        $p : Person( addr.street == "mystreet" )
    then
        System.out.println( "Hello2, " + $p.getName());
end